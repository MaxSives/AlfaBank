{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "wdio"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:wdio/recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-undef": "off",
    "wdio/await-expect": "off"
  }
}